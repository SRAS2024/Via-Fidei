{
  "name": "via-fidei",
  "version": "1.0.0",
  "private": true,
  "description": "Via Fidei Â· Multilingual Catholic website and app focused on clarity, beauty, and depth.",
  "main": "index.js",
  "scripts": {
    "dev:server": "node index.js",
    "dev:client": "vite --config vite.config.js",
    "dev": "npm run dev:server",
    "build:client": "vite build",
    "build": "npm run build:client",
    "start": "node index.js",

    "prisma:generate": "prisma generate --schema=./prisma.schema",
    "prisma:migrate": "prisma migrate deploy --schema=./prisma.schema",

    // new helper to create tables directly from the schema
    "prisma:push": "prisma db push --schema=./prisma.schema",

    "db:seed": "node database/seed.js",

    // critical: run on Railway build so the DB is ready and prefilled
    "postinstall": "npm run prisma:generate && npm run prisma:push && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.20.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^5.4.0",
    "@vitejs/plugin-react": "^4.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "catholic",
    "multilingual",
    "react",
    "express",
    "prisma",
    "postgresql",
    "railway"
  ],
  "author": "Via Fidei",
  "license": "MIT"
}
